{
  "name": "wordle-react",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "start": "node dist-server/server.js",
    "build": "vite build && npm run build:backend && npm run build-css",
    "build:backend": "tsc --project tsconfig.backend.json",
    "build-css": "sass src/styles/main.scss static/styles/style.css",
    "build-and-start": "npm run build && npm start",
    "test": "jest",
    "test:e2e": "cypress run",
    "test:all": "npm test && npm run test:e2e",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install",
    "watch:css": "sass --watch src/styles/main.scss:static/styles/style.css",
    "postinstall": "npm run build",
    "clean-install": "rm -rf node_modules package-lock.json && npm install"
  },
  "dependencies": {
    "connect-mongo": "^5.1.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-handlebars": "^8.0.1",
    "express-session": "^1.18.1",
    "mongodb": "^6.15.0",
    "mongoose": "^8.13.2",
    "qs": "^6.14.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "supertest": "^7.1.0",
    "undici": "^6.21.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/express": "^5.0.1",
    "@types/express-session": "^1.18.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "cypress": "^14.2.1",
    "esbuild": "^0.25.2",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "sass": "^1.86.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3",
    "vite": "^6.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md,html}": [
      "prettier --write"
    ]
  }
}
