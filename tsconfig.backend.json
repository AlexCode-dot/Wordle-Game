{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist-server",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/**/*.cts", "types/**/*", "src/**/*.d.ts"],
  "exclude": ["src/react", "src/styles"]
}
